<?xml version="1.0"?>
<config>
    <modules>
        <Apowell_BlockComments>
            <version>1.0.0</version>
        </Apowell_BlockComments>
    </modules>

    <frontend>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <apowell_blockcomments>
                        <type>model</type>
                        <class>apowell_blockcomments_model_observer</class>
                        <method>setFrameTags</method>
                    </apowell_blockcomments>
                </observers>
            </core_block_abstract_to_html_before>
        </events>
    </frontend>

    <default>
        <dev>
            <debug>
                <comments>0</comments>
            </debug>
        </dev>
    </default>
</config>
